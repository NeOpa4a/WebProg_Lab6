@import "reset.css"

body
  max-width 900px
  min-width 300px
  width 100%
  display flex
  flex-direction column
  gap 10px
  margin 0 auto
  padding 20px
  background linear-gradient(45deg, #88eb5d, #60a3db)
  background-size 300% 400%
  font-family "Arial", sans-serif

div
  margin-bottom 10px

h1
  font-size 24px

.schedule
  margin-top 20px

table
  width 100%
  border-collapse collapse
  margin-top 10px

table, th, td
  border 1px solid #000

th, td
  padding 10px
  text-align left
  background-color #ccc

td
  height 50px
  background-color whitesmoke

footer
  margin-top 40px
  font-size 12px
  color #555

footer a
  color #0000ee
  text-decoration none

footer a:hover
  text-decoration underline

.gallery
  display grid
  grid-template-columns repeat(2, 1fr)
  gap 20px
  margin-top 20px

.gallery-item
  text-align center

.gallery-item img
  width 200px
  height 100px
  object-fit cover

.caption
  margin-top 5px
  font-size 14px

.photo
  width 200px
  height 200px
  object-fit cover
